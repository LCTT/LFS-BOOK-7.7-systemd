      <varlistentry id="pcregrep">
        <term><command>pcregrep</command></term>
        <listitem>
          <para>A grep that understands Perl compatible regular
          expressions.</para>
          <indexterm zone="ch-system-pcre pcregrep">
            <primary sortas="b-pcre">pcregrep</primary>
